#include "main.h"
/**
**string_nconcat - function that concatenates two strings
*@s1: str
*@s2: string
*@n: number
*Return: string or null
*/

char *string_nconcat(char *s1, char *s2, unsigned int n)
{
char *str;
unsigned int i, j, s1_length, s2_length;
if (s1 == 0)
s1 = "";
if (s2 == 0)
s2 = "";
for (s1_lenght = 0; s1[s1_lenght] != '\0'; s1_length++)
;
for (s2_lenght = 0; s2[s1_lenght] != '\0'; s2_length++)
;
str = malloc(s1_lenght + n + 1);
if (str == 0)
{
return (0);
}
for ( i = 0; s1[i] != '\0'; i++)
str[i] = s1[i];
for ( j = 0; j < n; j++)
{
str[i] = s2[j];
i++;
}
str[i] = '\0';
return (str);
}
